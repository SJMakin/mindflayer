<Window x:Class="MindFlayer.ui.PromptDialog"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            Title="Enter Prompt" Height="200" Width="300">
        <StackPanel Margin="10">
            <TextBox x:Name="PromptTextBox" Height="100" AcceptsReturn="True" TextWrapping="Wrap"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button x:Name="OkButton" Click="OkButton_Click" Content="OK" Margin="0,0,5,0"/>
                <Button x:Name="CancelButton" Click="CancelButton_Click" Content="Cancel"/>
            </StackPanel>
        </StackPanel>
    </Window>